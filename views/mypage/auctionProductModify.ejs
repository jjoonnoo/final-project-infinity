<body>
    <div>
        <form id="auction_product_regist">
            <div>
                <label for="product_name1">상품명</label>
                <div>
                    <input id="product_name1" type="text" placeholder="상품명을 입력하세요" required>
                </div>
            </div>
            <div>
                <select class="form-select" id="product_category1">
                    <option selected>상품의 분류를 선택하세요</option>
                    <option value="1">의류</option>
                    <option value="2">잡화</option>
                    <option value="3">식품</option>
                    <option value="4">가구</option>
                    <option value="5">가전</option>
                    <option value="6">스포츠</option>
                    <option value="7">여행</option>
                    <option value="8">도서</option>
                    <option value="9">서비스</option>
                    <option value="10">그외</option>
                </select>
            </div>
            <div>
                <label for="product_content1">상품설명</label>
                <div>
                    <input id="product_content1" type="text" placeholder="상품에 대한 설명을 해주세요" required>
                </div>
            </div>
            <div>
                <label for="product_image1">상품이미지 등록</label>
                <div>
                    <input id="product_image1" onchange="upload_image()" type="file" placeholder="상품에 대한 설명을 해주세요" accept="image/*" required>
                </div>
                <div id="image_container1">

                </div>
            </div>
            <div>
                <label for="product_start_price">시작가</label>
                <div>
                    <input id="product_start_price" type="number" placeholder="시작가격을 입력하세요" min=1 required>
                </div>
            </div>
            
            <div>
                <label for="product_buy_now_price">즉시구매가</label>
                <div>
                    <input id="product_buy_now_price" type="number" placeholder="즉시구매가격을 입력하세요" min=1 required>
                </div>
            </div>
            <div>
                <div>
                    <label for="product_start_date">시작하는 날짜와 시간을 선택하세요: </label>
                    <input id="product_start_date" type="datetime-local" min="" required>
                </div>
            </div>
            <div>
                <div>
                    <label for="product_end_date">끝나는 날짜와 시간을 선택하세요: </label>
                    <input id="product_end_date" type="datetime-local" min="" required>
                </div>
            </div>
            <button onclick="modifyAuctionProduct()" class="btn btn-outline-secondary">수정하기</button>
        </form>
    </div>
</body>
